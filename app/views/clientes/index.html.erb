<p id="notice"><%= notice %></p>

<h1>Lista Clientes</h1>

<%= form_tag clientes_path, :method => 'get' do %>
<% content_tag :label do %>
Buscar termino:
<%= text_field_tag :search, params[:search] %>
<%= submit_tag "Buscar", :name => nil %>
<% end %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Cédula</th>
      <th>Nombre</th>
      <th>Fecha de nacimiento</th>
      <th>Correo</th>
      <th>Sexo</th>
      <th>Celular</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clientes.each do |cliente| %>
      <tr>
        <td><%= cliente.cedula %></td>
        <td><%= cliente.nombre %></td>
        <td><%= cliente.fch_ncto %></td>
        <td><%= cliente.mail %></td>
        <td><%= cliente.genero %></td>
        <td><%= cliente.celular %></td>
        <td><%= link_to 'Mostrar', cliente %></td>
        <td><%= link_to 'Editar', edit_cliente_path(cliente) %></td>
        <td><%= link_to 'Eliminar', cliente, method: :delete, data: {confirm: 'Eliminará el registro?'} %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Cliente', new_cliente_path %>

<%= will_paginate @clientes, :previous_label => '&laquo; Anterior', :next_label => 'Siguiente
&raquo;' %>
<br>
Clientes: <%= @clientes.count %>